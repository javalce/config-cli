{
  "name": "@javalce/config",
  "version": "0.1.0-beta.1",
  "description": "A CLI to bootstrap ESLint and Prettier using my configurations",
  "keywords": [
    "eslint",
    "prettier",
    "cli",
    "config"
  ],
  "homepage": "https://github.com/javalce/config-cli#readme",
  "bugs": {
    "url": "https://github.com/javalce/config-cli/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/javalce/config-cli.git"
  },
  "license": "MIT",
  "author": "Javier Valero <javalce29@gmail.com>",
  "type": "module",
  "bin": {
    "javalce-config": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "changelog": "conventional-changelog -i CHANGELOG.md -s -t v -p angular",
    "dev": "tsx src/index.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepack": "pnpm build",
    "prepare": "husky",
    "release": "bumpp && pnpm publish"
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "ansis": "^4.1.0",
    "commander": "^14.0.0",
    "execa": "^9.6.0",
    "fs-extra": "^11.3.0",
    "local-pkg": "^1.1.1",
    "prettier": "^3.5.3",
    "zod": "^3.25.42"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "@javalce/eslint-config": "^0.12.0",
    "@javalce/prettier-config": "^2.2.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.15.27",
    "bumpp": "^10.1.1",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^9.27.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "tsup": "^8.5.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
