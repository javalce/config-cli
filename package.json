{
  "name": "@javalce/config",
  "version": "0.1.0",
  "description": "A CLI to bootstrap ESLint and Prettier using my configurations",
  "keywords": [
    "eslint",
    "prettier",
    "cli",
    "config"
  ],
  "homepage": "https://github.com/javalce/config-cli#readme",
  "bugs": {
    "url": "https://github.com/javalce/config-cli/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/javalce/config-cli.git"
  },
  "license": "MIT",
  "author": "Javier Valero <javalce29@gmail.com>",
  "type": "module",
  "bin": {
    "javalce-config": "./dist/index.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "changelog": "conventional-changelog -i CHANGELOG.md -s -t v -p angular",
    "dev": "tsx src/index.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepack": "pnpm build",
    "prepare": "husky",
    "release": "bumpp && pnpm publish"
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "@clack/prompts": "0.11.0",
    "ansis": "4.2.0",
    "commander": "14.0.2",
    "execa": "9.6.1",
    "fs-extra": "11.3.3",
    "local-pkg": "1.1.2",
    "prettier": "3.7.4",
    "zod": "4.3.5"
  },
  "devDependencies": {
    "@commitlint/cli": "20.3.1",
    "@commitlint/config-conventional": "20.3.1",
    "@commitlint/types": "20.3.1",
    "@javalce/eslint-config": "0.21.3",
    "@javalce/prettier-config": "2.2.2",
    "@types/fs-extra": "11.0.4",
    "@types/node": "22.19.5",
    "bumpp": "10.4.0",
    "conventional-changelog-cli": "5.0.0",
    "eslint": "9.39.2",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "tsdown": "0.19.0",
    "tsx": "4.21.0",
    "typescript": "5.9.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
