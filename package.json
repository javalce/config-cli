{
  "name": "config-cli",
  "version": "0.0.1",
  "description": "A CLI to bootstrap ESLint and Prettier using my configurations",
  "keywords": [
    "eslint",
    "prettier",
    "cli",
    "config"
  ],
  "homepage": "https://github.com/javalce/config-cli#readme",
  "bugs": {
    "url": "https://github.com/javalce/config-cli/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/javalce/config-cli.git"
  },
  "license": "MIT",
  "author": "Javier Valero <javalce29@gmail.com>",
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": "./bin/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "changelog": "conventional-changelog -i CHANGELOG.md -s -t v -p angular",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky"
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "@javalce/eslint-config": "^0.11.4",
    "@javalce/prettier-config": "^2.1.0",
    "bumpp": "^10.1.0",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^9.26.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.3",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
